cd "${1}"

shift 1

for header in "$@"
do
	
	rm -rf "${header}"
	
	dir="${header}"
	
	while grep -q '/' <<< "${dir}"
	do
		
		dir=$(echo "${dir}" | sed -e 's~\(.*[^/]\)//*[^/]*~\1~')
		
		if test "${dir}" = "." || test ! -d "${dir}" || test -n "$(ls -A "${dir}")"
		then
			
			break
			
		else
		
			rmdir "${dir}"
			
		fi
	
	done
	
done
